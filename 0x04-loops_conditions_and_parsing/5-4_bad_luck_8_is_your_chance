#!/usr/bin/env bash
# Loop from 1 to 10 and display messages based on iteration number

# Initialize counter
counter=1

# Execute while counter is less than or equal to 10
while [ $counter -le 10 ]; do
    # Check for special iterations
    if [ $counter -eq 4 ]; then
        echo "bad luck"
    elif [ $counter -eq 8 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi
    # Increment counter
    ((counter++))
done

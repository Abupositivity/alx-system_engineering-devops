#!/usr/bin/env bash
# Display "Best School" 10 times with a special condition

# Initialize counter
counter=0

# Execute while counter is less than 10
while [ $counter -lt 10 ]; do
    # Check if it's the 9th iteration
    if [ $counter -eq 8 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi
    # Increment counter
    ((counter++))
done
